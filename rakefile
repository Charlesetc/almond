
task default: :test

desc "Run tests, exit on error"
task :test do
  puts sh "echo q | shindo ."
end

desc "Run tests, don't exit on error"
task :pry do
  puts sh "shindo ."
end

desc "Count the number of lines in the project"
task :lines do
  puts `find . -type f | ack -v git | ack -v 'md$' | ack -v readme | ack -v examples | ack -v '.go$' | xargs cat |wc -l`.to_i
end
